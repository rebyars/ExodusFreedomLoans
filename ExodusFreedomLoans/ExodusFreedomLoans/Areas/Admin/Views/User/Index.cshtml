@model IEnumerable<ApplicationUser>
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />

<div class="border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">List of Users</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info">
                <i class="fas fa-plus"></i> &nbsp; New User Registration
            </a>
        </div>
    </div>

    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Company)
                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Email)
            </td>
            <td>
                @Html.DisplayFor(m => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(m => item.Title)
            </td>
            <td>
                @Html.DisplayFor(m => item.Company)
            </td>
            <td>
                @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                {
                    <a class="btn btn-success text-white" asp-action=Lock asp-route-id="@item.Id">
                        <i class="fas fa-lock"></i>
                    </a>
                }
                else
                {
                    <a class="btn btn-success text-white" asp-action=Unlock asp-route-id="@item.Id">
                        <i class="fas fa-unlock"></i>
                    </a>
                }
            </td>
        </tr >
            }
        </table>
    }
    else
    {
        <p>No users exist.</p>
    }


</div>